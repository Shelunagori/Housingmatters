.outerbox {
    width: 1000px;      /* DEFINES TABLEBOX WIDTH */
    margin-top: 20px;
    margin-left: auto;
    margin-right: auto;
}
.outerbox .innerbox {
     width: 980px;       /* DEFINES TABLES WIDTH */
}
.innerbox {
    display: inline;
    float: left;
    height: 600px;       /* DEFINES TABLES HEIGHT */
    overflow-x: auto;
    overflow-y: auto;
}
.clear {
    clear: both;
    display: block;
    overflow: hidden;
    visibility: hidden;
    width: 0;
    height: 0;
}
.bluetable td, .bluetable th {
    border: 1px solid #778899;
    padding: 3px;
}
.bluetable {
    font-family: sans-serif;
}
.bluetable tbody tr td {
    background-color: #eef2f9;
    color: #262c31;
    font-size: 11px;
}
.bluetable tbody tr.odd td {
    background-color: #d6e0ef;
}
.bluetable thead tr th,
.bluetable thead tr td,
.bluetable tfoot tr th, 
.bluetable tfoot tr td {
    background-color: #8ca9cf;
    color: #121517;
    font-size: 12px;
    font-weight: bold;
    text-shadow: 0 1px 1px #e8ebee;
}